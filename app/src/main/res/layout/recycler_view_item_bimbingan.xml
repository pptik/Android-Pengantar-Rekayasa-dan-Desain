<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/tools"
    android:gravity="center_vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <TextView
            android:id="@+id/textViewBimbingan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="Judul bimbingan"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_marginTop="0dp"/>

        <TextView
            android:id="@+id/textViewTanggal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:text="00-00-00 00:00:00"
            android:gravity="right"
            android:textSize="15sp"
            android:visibility="invisible"
            android:layout_marginTop="3dp"/>

        <com.github.curioustechizen.ago.RelativeTimeTextView
            android:id="@+id/timestamp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:relative_time_prefix="Completed "
            android:layout_marginRight="15dp"
            android:layout_marginTop="3dp"
            android:gravity="right"
            />

        <TextView
            android:id="@+id/textViewMateri"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="Judul Materi"
            android:textSize="15sp"
            android:layout_marginTop="3dp"
            android:layout_below="@+id/textViewBimbingan"/>

        <View
            android:id="@+id/separatorLine"
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:background="#E0E0E0"
            android:layout_marginTop="19dp"
            android:layout_below="@+id/textViewMateri"
            />


    </RelativeLayout>


</FrameLayout>
