<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical">



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/coverMateri"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/materi1" />

            <TextView
                android:id="@+id/namaMateri"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/coverMateri"
                android:text="Visualisasi"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/textViewSubMateri"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/coverMateri"
                android:text="4 Sub Materi"
                android:visibility="invisible"
                android:layout_alignBottom="@+id/coverMateri"
                android:gravity="right"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tombolMulai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/namaMateri"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/coverMateri"
                android:layout_alignBottom="@+id/coverMateri"
                android:gravity="bottom"
                android:clickable="true"
                android:textStyle="bold"
                android:text="MULAI BELAJAR"
                android:textColor="#E57373"
                android:textSize="15sp" />

            <View
                android:id="@+id/separatorLine"
                android:layout_width="match_parent"
                android:layout_height="0.8dp"
                android:background="#E0E0E0"
                android:layout_marginTop="16dp"
                android:layout_below="@+id/coverMateri"
                />

        </RelativeLayout>

</FrameLayout>
